{
  "\$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd app_production && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd app_production && python app.py",
    "restartPolicyMaxRetries": 10,
    "restartPolicyWindowMs": 60000
  }
}
